<% @body_id = 'signup' %>


<%= render 'shared/error_messages', :target => @user %>

<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
      <%= render 'shared/taxonomies' %>
  </div>
<% end %>



<div id="new-customer">
  <h2><%= t(:new_customer) %></h2>

  <div data-hook="signup">

    <%= form_for @user, :as => :user , :url => registration_path(@user) do |f| %>

      <div data-hook="signup_inside_form">
        <%= render 'shared/user_form', :f => f %>
        <p class="clear"><%= f.submit t(:create), :class => 'button primary' %></p>
      </div>
    <% end %>
    <%= t(:or) %> <%= link_to t(:login_as_existing), login_path %>

  </div>

</div>

<div data-hook="login_extras"></div>